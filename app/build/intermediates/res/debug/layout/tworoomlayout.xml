        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="70dp" />

    <TextView
        android:id="@+id/textViewRoomTemp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTemp2"
        android:layout_centerVertical="true"
        android:text="Room Temperature"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewRoomTemp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewTemp1"
        android:layout_alignLeft="@+id/textViewTemp1"
