<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageViewBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="312px"
        android:layout_centerInParent="true"
        android:src="@drawable/top_small" />

    <ImageView
        android:id="@+id/imageViewBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewBox"
        android:layout_centerInParent="true"
        android:layout_marginTop="8px"
        android:src="@drawable/bottom_small" />

    <ImageView
        android:id="@+id/imageViewDegree1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewBox"
        android:layout_marginTop="24px"
        android:layout_alignLeft="@+id/textViewTemp1"
        android:layout_marginLeft="76px"
        android:src="@drawable/degree" />

    <TextView
        android:id="@+id/textViewCent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewTemp1"
        android:layout_alignBottom="@+id/textViewTemp1"
        android:layout_alignLeft="@+id/imageViewBox"
        android:layout_marginLeft="120px"
        android:text="Centigrade"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewRoomTemp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewBox"
        android:layout_alignLeft="@+id/imageViewBox"
        android:layout_marginLeft="54px"
        android:layout_marginBottom="8px"
        android:text="Room Temperature"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageViewBar"
        android:layout_alignLeft="@+id/imageViewBar"
        android:layout_marginTop="8px"
        android:layout_marginLeft="64px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Heating Off"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/setup_button_small" />

    <TextView
        android:id="@+id/textViewTemp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewRoomTemp1"
        android:layout_alignTop="@+id/imageViewBox"
        android:layout_marginTop="16px"
        android:layout_marginRight="80px"
        android:text="19"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="70dp" />

</RelativeLayout>
