<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/coldone" />

    <ImageView
        android:id="@+id/imageViewDegree1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewTemp1"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/textViewTemp1"
        android:src="@drawable/degree" />

    <TextView
        android:id="@+id/textViewCent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewTemp1"
        android:layout_alignBottom="@+id/textViewTemp1"
        android:layout_toRightOf="@+id/textViewTemp1"
        android:text="Centigrade"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewRoomTemp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewTemp1"
        android:layout_centerHorizontal="true"
        android:text="Room Temperature"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewCent1"
        android:layout_below="@+id/textViewTemp1"
        android:text="Heating Off"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/setup_button_small" />

    <TextView
        android:id="@+id/textViewTemp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewRoomTemp1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:text="19"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="70dp" />

    </RelativeLayout>